{
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/ember-animation/ember-animated-tools.git"
  },
  "workspaces": [
    "addon",
    "test-app"
  ],
  "scripts": {
    "prepare": "cd addon && pnpm run build",
    "release": "release-it"
  },
  "devDependencies": {
    "release-it": "^14.2.1",
    "release-it-lerna-changelog": "^3.1.0",
    "release-it-yarn-workspaces": "^2.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "ember-source": "*"
      }
    }
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "release-it-yarn-workspaces": {
        "workspaces": [
          "addon"
        ]
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "volta": {
    "node": "12.22.7"
  }
}
