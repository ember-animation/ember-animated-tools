{
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/ember-animation/ember-animated-tools.git"
  },
  "workspaces": [
    "addon",
    "test-app"
  ],
  "scripts": {
    "prepare": "cd addon && pnpm run build",
    "release": "release-it"
  },
  "devDependencies": {
    "release-it": "^14.12.5",
    "release-it-lerna-changelog": "^4.0.1",
    "release-it-yarn-workspaces": "^2.0.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "ember-source": "*"
      }
    }
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "release-it-yarn-workspaces": {
        "workspaces": [
          "addon"
        ],
        "additionalManifests": {
          "dependencyUpdates": [
            "test-app/package.json"
          ],
          "versionUpdates": [
            "test-app/package.json"
          ]
        }
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "volta": {
    "node": "12.22.10"
  }
}
